<div id='mainHdr'>
    <div class='menu'>
        <span id='homeBtn'><a href='/' class='active'>Home</a></span>
        <span id='dashBtn'><a href='/dashboard'>Dashboard</a></span>
        {{#if logged_in}}
        <span id='logoutBtn'><a href=''>Logout</a></span>
        {{else}}
        <span id='loginBtn'><a href='/login'>Login</a></span>
        {{/if}}
    </div>
    <div id='headerMsg'>
    </div>
</div>
<h2>Please sign up</h2>
<form id='signup-form'>
    <div class="form-group col-6 text-center mx-auto bg-light">
        <label for="email">Email address</label>
        <input type="email" class="form-control" id="email" aria-describedby="emailHelp"
            placeholder="Enter email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group col-6 text-center mx-auto bg-light">
        <label for="newpassword">Password</label>
        <input type="password" class="form-control" id="newpassword" placeholder="Enter Password">
    </div>
    <div class="row col-3 mx-auto justify-content-center">
        <button type="button" class="btn btn-dark mx-auto" id="signUpBtn">Submit</button>
    </div>
</form>

<script src="/js/signup.js"></script>